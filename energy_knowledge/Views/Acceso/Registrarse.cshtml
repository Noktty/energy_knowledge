@model energy_knowledge.ViewModels.UsuarioVM;
@{
    Layout = null;
}

<html>
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <title>Registrarse</title>
    </head>
    <body>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div  class="card-header">
                        Registrate

                    </div>
                    <div class="card-body">

                        <form asp-controller="Acceso" asp-action="Registrarse" method="post" >
                            <input class="form-control mb-3" type="text" placeholder="Nombre" required asp-for="Nombre" />
                            <input class="form-control mb-3" type="text" placeholder="Apellido(s)" required asp-for="Apellidos" />
                            <input class="form-control mb-3" type="email" placeholder="Correo electronico" required asp-for="Correo" /> 
                            <input class="form-control mb-3" type="password" placeholder="Contraseña"  required asp-for="Contrasenia" />
                            <input class="form-control mb-3" type="password" placeholder="Confirmar Contraseña"  required asp-for="ConfirmarContrasenia" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Resgistrate</button>
                            
                            </div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        
                        <p>¿Ya tienes una cuenta? <a aps-controller="Acceso" asp-action="Login">Iniciar Sesión</a></p>

                        </form>
                    </div>
                </div>


            </div>
        </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    </body>
</html>
